<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Add Expense</title>
  <style>
    body {
      background: #fef9f5;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h2 {
      font-weight: bold;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Budget Tracker App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add New Expense</h2>

    <!-- Flash Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/addExpense" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Expense Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-control" id="category" name="category" required>
          <option value="Rent">Rent</option>
          <option value="Transport">Transport</option>
          <option value="Food">Food</option>
          <option value="Utilities">Utilities</option>
          <option value="Insurance">Insurance</option>
          <option value="Medical">Medical</option>
          <option value="Saving, Investing, & Debt Payments">Saving, Investing, & Debt Payments</option>
          <option value="Personal Spending & Entertainment">Personal Spending & Entertainment</option>
          <option value="Miscellaneous">Miscellaneous</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="amount" class="form-label">Amount ($)</label>
        <input type="number" class="form-control" id="amount" name="amount" min="0" step="0.01" required>
      </div>

      <div class="mb-4">
        <label for="date" class="form-label">Date</label>
        <input class="form-control" type="date" id="date" name="date" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary rounded-pill">Add Expense</button>
      </div>
    </form>
  </div>
</body>

</html>
