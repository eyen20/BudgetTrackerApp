<!DOCTYPE html>
<html lang="en">

<head>
  <title>Budget Tracker App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style = "background-image: url('https://img.freepik.com/photos-gratuite/bloc-notes-clavier-argent-calculatrice-fond-jaune-plat_169016-24901.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">
  <div class="container">
    <h1 class="mt-5">Welcome to the Budget Tracker App</h1>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (user) { %>
      <p>Hello, <%= user.username %></p>
      <a href="/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
      <a href="/logout" class="btn btn-secondary mt-3 ms-2">Logout</a>
    <% } else { %>
      <a href="/register" class="btn btn-primary mt-3">Register</a>
      <a href="/login" class="btn btn-secondary mt-3 ms-2">Login</a>
    <% } %>
  </div>
</body>

</html>
