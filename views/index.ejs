<!DOCTYPE html>
<html lang="en">

<head>
  <title>Budget Tracker App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
  .body {
    text-align: center;
  }
</style>

<body style="
  margin: 0;
  min-height: 100vh;
  background-image: url('https://img.freepik.com/photos-gratuite/bloc-notes-clavier-argent-calculatrice-fond-jaune-plat_169016-24901.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;">
  <div class="container text-center text-white py-5>">
      <h1>Welcome to the Budget Tracker App</h1>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (user) { %>
      <p class="mt-4">Hello, <%= user.username %></p>
      <div class="mt-3">
        <a href="/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
        <a href="/logout" class="btn btn-secondary mt-3 ms-2">Logout</a>
      </div>
    <% } else { %>
      <div class="mt-4">
        <a href="/register" class="btn btn-primary mt-3">Register</a>
        <a href="/login" class="btn btn-secondary mt-3 ms-2">Login</a>
      </div>
    <% } %>
  </div>
</body>

</html>
