<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Budget Tracker App</title>
  <style>
    body {
      margin: 0;
      min-height: 100vh;
      background-image: url('https://img.freepik.com/photos-gratuite/bloc-notes-clavier-argent-calculatrice-fond-jaune-plat_169016-24901.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
    }
    .btn-register {
      background-color: #0d6efd;
      border: none;
      color: white;
    }
    .btn-register:hover {
      background-color: #0d6efd;
    }
    .btn-login {
      background-color: #6c757d;
      border: none;
      color: white;
    }
    .btn-login:hover {
      background-color: #6c757d;
    }
    h1 {
      font-weight: bold;;
    }
  </style>
</head>

<body>
  <div class="container text-center text-black py-5">
      <h1>Welcome to the Budget Tracker App!</h1>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (user) { %>
      <p class="mt-4">Hello, <%= user.username %></p>
      <div class="mt-3">
        <a href="/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
        <a href="/logout" class="btn btn-secondary mt-3 ms-2">Logout</a>
      </div>
    <% } else { %>
      <div class="mt-4">
        <a href="/register" class="btn btn-register btn-lg mt-3 ms-2">Register</a>
        <a href="/login" class="btn btn-login btn-lg mt-3 ms-2">Login</a>
      </div>
    <% } %>
  </div>
</body>

</html>
