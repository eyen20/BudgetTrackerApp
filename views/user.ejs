<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Admin Dashboard - Budget Tracker</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">Budget Tracker App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h2>You are viewing <%= user.username %>
        </h2>
        <hr />
        <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#budgetsTable" aria-expanded="false" aria-controls="budgetsTable">
            Budgets Filter
        </button>
        <div class="collapse" id="budgetsTable">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Category</span>
                </div>
                <input type="text" class="form-control" aria-label="Category Filter" aria-describedby="category-addon1" id="categoryFilter" name="categoryFilter">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Month</span>
                </div>
                <input type="month" class="form-control" aria-label="Month Filter" aria-describedby="month-addon1" id="monthFilter" name="monthFilter">
            </div>
        </div>

            <!-- Budgets Table -->
        <h3><%= user.username %>'s Budgets</h3>
        <% if (budgets && budgets.length > 0) { %>
        <table class="table table-bordered mt-3">
            <thead>
            <tr>
                <th>#</th>
                <th>Category</th>
                <th>Month</th>
                <th>Budgeted</th>
                <th>Spent</th>
                <th>Remaining</th>
            </tr>
            </thead>
            <tbody>
            <% budgets.forEach(b => {
                const budgeted = Number(b.budgeted);
                const spent = Number(b.spent);
                const remaining = budgeted - spent;
            %>
                <tr>
                <td><%= b.budgetId %></td>
                <td><%= b.category %></td>
                <td><%= b.formattedMonth %></td>
                <td>$<%= budgeted.toFixed(2) %></td>
                <td>$<%= spent.toFixed(2) %></td>
                <td class="<%= remaining < 0 ? 'text-danger' : 'text-success' %>">$<%= remaining.toFixed(2) %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p>No budgets found.</p>
        <% } %>

        <!-- Expenses Table -->
        <h3><%= user.username %>'s Expenses</h3>
        <% if (expenses && expenses.length > 0) { %>
        <table class="table table-striped mt-3 table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            <% expenses.forEach(e => { %>
                <tr>
                <td><%= e.expenseId %></td>
                <td><%= e.title %></td>
                <td><%= e.category %></td>
                <td>$<%= Number(e.amount).toFixed(2) %></td>
                <td><%= new Date(e.date).toISOString().split('T')[0] %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p>No expenses found.</p>
        <% } %>

    </div>

</body>

</html>