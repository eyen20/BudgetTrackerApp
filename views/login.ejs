<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login - Budget Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #fef9f5;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }
    .login-box {
      background: white;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      max-width: 420px;
      width: 100%;
    }
    .login-box input {
      padding-left: 2.5rem;
    }
    .icon {
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 1rem;
      color: #aaa;
    }
    .form-group {
      position: relative;
    }
    .btn-green {
      background-color: #00c853;
      border: none;
      color: white;
    }
    .btn-green:hover {
      background-color: #00b248;
    }
    .small-link {
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <div class="login-box">
    <h3 class="text-center mb-4">Good to see you again</h3>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error %></p>
        <% }); %>
      </div>
    <% } %>
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>
           <form action="/login" method="POST">
      <div class="form-group mb-3">
        <span class="icon">&#9993;</span> <!-- envelope icon -->
        <input type="email" name="email" class="form-control" placeholder="e.g. elon@tesla.com" required>
      </div>
      <div class="form-group mb-4">
        <span class="icon">&#128274;</span> <!-- lock icon -->
        <input type="password" name="password" class="form-control" placeholder="e.g. ilovebudget123" required>
      </div>
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-green btn-lg rounded-pill">Sign in</button>
      </div>
      <div class="text-center small-link">
        <a href="/register">Don't have an account?</a>
      </div>
    </form>
  </div>

</body>
</html>