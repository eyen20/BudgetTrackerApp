<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Dashboard - Budget Tracker</title>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Budget Tracker App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/addExpense">Add Expense</a></li>
          <li class="nav-item"><a class="nav-link" href="/addBudget">Add Budget</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link" href="/admin">Admin Dashboard</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2>Welcome, <%= user.username %> (<%= user.role %>)</h2>
    <p class="text-muted">You're logged in to your personal budget dashboard.</p>

    <hr />

    <!-- Budget Summary Table -->
    <h3>Your Budgets</h3>
    <% if (budgets && budgets.length> 0) { %>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th>Category</th>
            <th>Month</th>
            <th>Budgeted</th>
            <th>Spent</th>
            <th>Remaining</th>
            <th>Actions</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% budgets.forEach(b=> {
            const budgeted = Number(b.budgeted);
            const spent = Number(b.spent);
            const remaining = budgeted - spent;
            %>
            <tr>
              <td>
                <%= b.category %>
              </td>
              <td>
                <%= b.formattedMonth %>
              </td>
              <td>$<%= budgeted.toFixed(2) %>
              </td>
              <td>$<%= spent.toFixed(2) %>
              </td>
              <td class="<%= remaining < 0 ? 'text-danger' : 'text-success' %>">
                $<%= remaining.toFixed(2) %>
              </td>
              <td>
                <a href="/updateBudget/<%= b.budgetId %>" class="btn btn-secondary">Update</a>
              </td>
              <td>
                <form action="/deleteBudget/<%= b.budgetId %>" method="post" style="display: inline;" onsubmit="return confirm('You want to delete the budget entry?');">
                  <button type="Submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% } else { %>
        <p>No budgets found. <a href="/addBudget">Add a budget now</a>.</p>
        <% } %>

          <hr />

          <!-- Recent Expenses -->
          <h3>Your Recent Expenses</h3>
          <% if (expenses && expenses.length> 0) { %>
            <table class="table table-striped mt-3">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Amount</th>
                  <th>Date</th>
                  <th>Actions</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% expenses.forEach(e=> { %>
                  <tr>
                    <td>
                      <%= e.title %>
                    </td>
                    <td>
                      <%= e.category %>
                    </td>
                    <td>$<%= Number(e.amount).toFixed(2) %>
                    </td>
                    <td>
                      <%= new Date(e.date).toISOString().split('T')[0] %>
                    </td>
                    <td>
                      <a href="/updateExpense/<%= e.expenseId %>" class="btn btn-secondary">Update</a>
                    </td>
                    <td>
                      <form action="/deleteExpense/<%= e.expenseId %>" method="post" style="display:inline;" onsubmit="return confirm('You want to delete the expense entry?');">
                        <button type="Submit" class="btn btn-danger">Delete</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <% } else { %>
              <p>No expenses yet. <a href="/addExpense">Add your first expense</a>.</p>
              <% } %>
  </div>
</body>

</html>